{
  "Routes": [
    {
      "DownstreamPathTemplate": "/identity/{endpoint}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-service",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/identity/{endpoint}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ]
    },
    {
      "DownstreamPathTemplate": "/{endpoint}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/{endpoint}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ]
    },
    {
      "DownstreamPathTemplate": "/{endpoint}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ui",
          "Port": 4200
        }
      ],
      "UpstreamPathTemplate": "/{endpoint}",
      "UpstreamHttpMethod": [ "Get", "POST" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000"
  }
}